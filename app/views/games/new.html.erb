<h2>Create the longest word from these 10 letters</h2>


<div class="letters-container">
  <% @letters.each do |letter| %>
    <div class="letter"><h3><%= letter %></h3></div>
  <% end %>
</div>

<div class="container">
  <form method="POST" action="score">
    <div class="form-group">
      <input placeholder="Type your answer" type="text" class="form-control" id="input">
    </div>
    <button type="submit" class="btn btn-primary">See result</button>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>